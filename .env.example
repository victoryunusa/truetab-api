# Server Configuration
NODE_ENV=development
PORT=9000
LOG_LEVEL=info

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/truetab_db?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT Secrets - CHANGE THESE IN PRODUCTION!
JWT_ACCESS_SECRET=your-super-secret-access-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# Email Configuration
MAIL_HOST=smtp.example.com
MAIL_PORT=465
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_FROM_NAME="TrueTab"
MAIL_FROM_ADDRESS=noreply@truetab.com

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Application
APP_URL=http://localhost:3000

# ================================
# Payment Providers
# At least one payment provider should be configured
# ================================

# Stripe Configuration (Optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Polar.sh Configuration (Optional)
POLAR_ACCESS_TOKEN=polar_at_your_access_token
POLAR_WEBHOOK_SECRET=polar_wh_your_webhook_secret
POLAR_ORGANIZATION_ID=your_organization_id

# OpenAI Configuration (for AI features)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
